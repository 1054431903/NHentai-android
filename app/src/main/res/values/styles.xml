<resources>

	<style name="Base.Theme.NHBooks.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Base.Theme.NHBooks.Light" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Base.Theme.NHBooks.Dark" parent="Theme.AppCompat">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.NHBooks.Light" parent="Base.Theme.NHBooks.Light">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
	</style>

	<style name="Theme.NHBooks.Light.DarkActionBar" parent="Base.Theme.NHBooks.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
		<item name="colorControlNormal">@android:color/white</item>
		<item name="android:textColorPrimary">@android:color/white</item>
	</style>

	<style name="Theme.NHBooks.Light.DarkActionBar.Fix" parent="Theme.NHBooks.Light.DarkActionBar">
		<item name="android:textColorPrimary">@color/primary_text_default_material_light</item>
	</style>

	<style name="Theme.NHBooks.Dark" parent="Base.Theme.NHBooks.Dark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
		<item name="colorControlNormal">@android:color/white</item>
		<item name="android:textColorPrimary">@android:color/white</item>
	</style>

	<style name="TextTag">
		<item name="@android:textSize">@dimen/tag_text_size</item>
		<item name="@android:textColor">@android:color/white</item>
		<item name="@android:background">@color/deep_purple_800</item>
		<item name="@android:ellipsize">marquee</item>
		<item name="@android:singleLine">true</item>
		<item name="@android:paddingTop">4dp</item>
		<item name="@android:paddingBottom">4dp</item>
		<item name="@android:paddingLeft">8dp</item>
		<item name="@android:paddingRight">8dp</item>
	</style>

	<style name="Widget"/>

	<style name="Widget.Material"/>

	<style name="Widget.Material.SeekBar">
		<item name="sl_trackSize">2dp</item>
		<item name="sl_trackCap">square</item>
		<item name="sl_thumbBorderSize">2dp</item>
		<item name="sl_thumbRadius">10dp</item>
		<item name="sl_thumbFocusRadius">14dp</item>
		<item name="sl_travelAnimDuration">@android:integer/config_mediumAnimTime</item>
		<item name="sl_transformAnimDuration">@android:integer/config_shortAnimTime</item>
		<item name="sl_interpolator">@android:anim/decelerate_interpolator</item>
		<item name="sl_minValue">0</item>
		<item name="sl_maxValue">100</item>
		<item name="sl_stepValue">1</item>
		<item name="sl_value">0</item>
		<item name="sl_discreteMode">false</item>
		<item name="sl_textSize">@dimen/abc_text_size_small_material</item>
		<item name="sl_textColor">#FFFFFFFF</item>
	</style>

	<style name="Widget.Material.SeekBar.Discrete" parent="Widget.Material.SeekBar">
		<item name="sl_discreteMode">true</item>
	</style>

	<style name="Theme.NHBooks.Dark.Translucent" parent="Theme.NHBooks.Dark"/>

	<style name="Theme.NHBooks.Light.NewHome" parent="Theme.NHBooks.Light.DarkActionBar">
		<item name="android:windowBackground">@color/deep_purple_500</item>
	</style>

</resources>
